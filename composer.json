{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/doctrine-fixtures-bundle": "^3.3",
        "guzzlehttp/guzzle": "^7.0",
        "symfony/console": "5.1.*",
        "symfony/dotenv": "5.1.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "5.1.*",
        "symfony/orm-pack": "^1.0",
        "symfony/yaml": "5.1.*",
        "ext-json": "*"
    },
    "require-dev": {
        "infection/infection": "^0.16.4",
        "phpstan/phpstan": "^0.12.30",
        "phpstan/phpstan-doctrine": "^0.12.17",
        "phpstan/phpstan-phpunit": "^0.12.11",
        "phpstan/phpstan-symfony": "^0.12.6",
        "phpunit/phpunit": "^9.2",
        "vimeo/psalm": "^3.11"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPMinds\\Unit\\": "tests/phpunit/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts",
            "@security-check"
        ],
        "post-update-cmd": [
            "@auto-scripts",
            "@security-check"
        ],
        "phpstan": [
            "@run-static-analysis"
        ],
        "reset-db": [
            "bin/console doctrine:database:drop --force",
            "bin/console doctrine:database:create",
            "bin/console doctrine:migrations:migrate --no-interaction --allow-no-migration"
        ],
        "populate-db": [
            "bin/console doctrine:fixtures:load --no-interaction"
        ],
        "build-dev": [
            "@composer install",
            "@reset-db",
            "@populate-db"
        ],
        "pp": [
            "@test",
            "@phpcs",
            "@phpstan"
        ],
        "security-check": "docker run --platform linux/x86_64 --rm -v $(pwd):$(pwd) -w $(pwd) symfonycorp/cli security:check",
        "run-static-analysis": "phpstan analyse src tests/phpunit --level 7",
        "test": "phpunit --colors=always",
        "test-coverage-complete": "phpunit --colors=always --coverage-html=tests/coverage/ ",
        "phpcs": "php-cs-fixer fix --dry-run src",
        "fix-styles": "php-cs-fixer fix src",
        "fix-test-styles": "php-cs-fixer fix tests"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.2.*"
        }
    }
}
